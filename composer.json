{
  "name": "pascaldevink/cloudevents",
  "description": "PHP implementation of the CloudEvents specificion (https://cloudevents.io/)",
  "type": "library",
  "keywords": [
    "cloud",
    "events",
    "cloudevents",
    "pubsub"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pascal de Vink",
      "email": "pascal@pascaldevink.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "PascalDeVink\\CloudEvents\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PascalDeVink\\CloudEvents\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "league/uri": "^6.2",
    "webmozart/assert": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^3.3.1"
  }
}
